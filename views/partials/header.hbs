                <a class="nav-link" href="/user/profile"> User Account</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="/user/logout"> Logout</a>
            </li>
            {{ else }}
            <li class="nav-item">
                <a class="nav-link" href="/user/signup">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/user/signin"> Login</a>
            </li>

            {{/if}}
        </ul>
    </div>
</nav>